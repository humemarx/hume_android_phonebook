<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_gravity="center_vertical"
        android:background="#ffff51f0"
        android:weightSum="1"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="0dp"
            android:id="@+id/image_back"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:contentDescription="@string/friend_icon"
            android:layout_weight="0.5"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="114dp"
            android:layout_height="107dp"
            android:id="@+id/text_image_show"
            android:layout_gravity="right"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/friend_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name_show"
            android:text="@string/friend_text"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:singleLine="false"
            android:paddingLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffd9f2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:id="@+id/text_num_show"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" />
    </LinearLayout>
</LinearLayout>
